<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/dialog_background"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="@string/exclude_title"
            android:textColor="?attr/colorPrimaryText"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/alertInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alertTitle"
            android:fontFamily="@font/regular"
            android:layout_marginTop="16dp"
            android:textColor="?attr/colorPrimaryText"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/exclude_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_yes"
            android:layout_toStartOf="@id/button_no"
            android:layout_marginTop="8dp"
            android:layout_below="@id/alertInfo"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
            android:text="@string/dialog_yes"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_no"
            android:layout_marginTop="8dp"
            android:layout_below="@id/alertInfo"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
            android:text="@string/dialog_no"/>

    </RelativeLayout>

</RelativeLayout>