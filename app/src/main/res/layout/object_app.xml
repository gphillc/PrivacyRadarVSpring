<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@string/image_descriptions"
        android:id="@+id/image_app"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="2dp"
        android:padding="6dp"
        android:background="@mipmap/ic_launcher"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_app"
        android:layout_toStartOf="@id/checkbox_select"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/text_app_name"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingBottom="3dp"
            android:fontFamily="@font/medium"
            android:textColor="?attr/colorPrimaryText"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_app_info"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingBottom="3dp"
            android:fontFamily="@font/regular"
            android:textColor="?attr/colorIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_info3"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_select"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</RelativeLayout>